{
  "extends": "./tsconfig.server.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "rootDir": "src/server",
    "lib": ["ES2022"],
    "outDir":  "dist-server",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["server/**/*.ts", "Server.ts"]
}